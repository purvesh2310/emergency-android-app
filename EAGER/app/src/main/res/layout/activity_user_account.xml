<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pk.eager.User.UserAccount"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userAccount_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your profile"/>

    <Button
        android:id="@+id/userAccount_signup_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In/ Sign Up"
        android:onClick="onSignInButtonClick"/>

    <Button
        android:id="@+id/userAccount_signout_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:onClick="onSignOutButtonClick"/>

</LinearLayout>
